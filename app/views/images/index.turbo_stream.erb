<%= turbo_stream.update "content" do%>
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <div class="text-center">
      <h1 class="font-bold text-2xl">Images</h1>
    </div>
    <div class="mt-5 mb-5 text-center">
      <%= link_to 'New image', new_image_path, class: "rounded-lg px-5 bg-blue-600 text-white font-medium text-center py-2" %>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4 justify-center">
      <%= render @images %>
    </div>
  </div>
<% end %>