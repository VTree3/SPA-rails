<% if flash[:error] %>
  <div class="py-2 px-3 bg-green-50 mb-5 text-red-500 font-medium rounded-lg block w-75" id="notice">
    <ul>
      <% flash[:error].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
    <%= notice %>
  </p>
<% end %>
<h1 class="font-bold text-2xl">Task Manager</h1>
<div class="my-8">
  <%= render "form", task: @task %>
</div>
<div class="px-5" data-controller="tasks">
<div class="block mb-2" >
  <%= render @tasks %>
</div>


<turbo-frame id = "Yessir" class = "block w-75 py-2 px-3">
  <%= link_to "Simpler method for Turbo Frames.", tasks_trying_path, class: "text-lg"%>
</turbo-frame>
</div>
